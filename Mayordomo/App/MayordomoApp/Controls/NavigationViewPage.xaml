<?xml version="1.0" encoding="UTF-8"?>
<NavigationPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MayordomoApp.Controls.NavigationViewPage"
    xmlns:fontawesome="clr-namespace:MayordomoApp.Fonts"
    BarTextColor="White"
    Title="Mayordomo"
    BarBackgroundColor="#1C2E29">
    <NavigationPage.ToolbarItems>
        <ToolbarItem Command="{Binding AddVideoCallCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    Glyph="{x:Static fontawesome:FontAwesome.Video}"
                    Size="20"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </NavigationPage.ToolbarItems>
</NavigationPage>
